REQUIRE "ivpsystem.a4l";

MODEL simple_ok1;
	y IS_A solver_var;
	dy_dt IS_A solver_var;
	t IS_A solver_var;
	dy_dt = -4 * y;
METHODS
METHOD on_load;
	INDEPENDENT t;
	DER(dy_dt,y);
END on_load;
END simple_ok1;

