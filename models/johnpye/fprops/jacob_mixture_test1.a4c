(* Outline of ASCEND multi-component ideal-solution routine *)

REQUIRE "atoms.a4l";
REQUIRE "johnpye/thermo_types.a4c";
IMPORT "johnpye/fprops/mixture";
REQUIRE "johnpye/fprops/mixtures.a4l";

(* The mixture_test model *)
MODEL mixture_test; (* ///1 *)
	T IS_A temperature;
	p IS_A pressure;
	rho IS_A mass_density;
	u IS_A specific_energy;
	h IS_A specific_enthalpy;
	s IS_A specific_entropy;
	g IS_A specific_secondary_energy;
	a IS_A specific_secondary_energy;

	mixt IS_A mixture_spec;
	mixt.npure :== 3;
	mixt.components[1] :== 'ammonia';
	mixt.components[2] :== 'carbondioxide';
	mixt.components[3] :== 'cyclohexane';
	mixt.eos :== 'pengrob';
	mixt.xs[1] :== 0.4;
	mixt.xs[2] :== 0.35;
	mixt.xs[3] :== 0.25;

	nphase IS_A phase_count;
	phase_frac[1..3] IS_A mass_fraction;
	phase_rho[1..3] IS_A mass_density;

	mix_density : mixture_rho(
		T, p : INPUT;
		rho : OUTPUT;
		mixt : DATA
	);

	mix_phases : mixture_flash_phases(
		T, p : INPUT;
		nphase, phase_frac[1], phase_frac[2], phase_frac[3] : OUTPUT;
		mixt : DATA
	);

	mix_u : mixture_u(
		T, p : INPUT;
		u : OUTPUT;
		mixt : DATA
	);

	mix_h : mixture_h(
		T, p : INPUT;
		h : OUTPUT;
		mixt : DATA
	);

	mix_s : mixture_s(
		T, p : INPUT;
		s : OUTPUT;
		mixt : DATA
	);

	mix_g : mixture_g(
		T, p : INPUT;
		g : OUTPUT;
		mixt : DATA
	);

	mix_a : mixture_a(
		T, p : INPUT;
		a : OUTPUT;
		mixt : DATA
	);
METHODS
METHOD specify;
	FIX T;
	FIX p;
END specify;
METHOD values;
	T := 300 {K} + 273.15 {K};
	p := 2 {bar};
END values;
METHOD options;
	SOLVER QRSlv;
	OPTION convopt 'RELNOM_SCALE';
END options;
METHOD setup;
	RUN specify;
	RUN values;
	RUN options;
END setup;
END mixture_test;
