REQUIRE "atoms.a4l";

MODEL when_test;

	x IS_A variable;
	y IS_A variable;
	
	lin: y = x - 1;
	quad: y = x^2 / 4;

	use_linear IS_A boolean_var;

	WHEN(use_linear)
		CASE TRUE:
			USE lin;
		CASE FALSE:
			USE quad;
	END WHEN;

METHODS
METHOD default_self;
	RUN reset;
	RUN values;
END default_self;

METHOD specify;
	use_linear.fixed := TRUE;
	x.fixed := TRUE;
END specify;

METHOD values;
	use_linear := FALSE;
	x := -4;
END values;

METHOD self_test;
	ASSERT y == 4;
END self_test;

END when_test;

(* test the other branch of the WHEN... *)
	
MODEL when_test_2 REFINES when_test;
	(* nothing here *)

METHODS
METHOD values;
	use_linear := TRUE;
	x := -4;
END values;

METHOD self_test;
	ASSERT y == -5;
END self_test;

END when_test_2;
