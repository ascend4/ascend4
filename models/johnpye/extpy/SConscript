Import('env')
extfn_env = env.Copy()

srcs = Split("""
	extpy.c
""")

extfn_env.Append(LIBPATH=['#',env.get('PYTHON_LIBPATH')])
extfn_env.Append(LIBS=['ascend',env.get('PYTHON_LIB')])
extfn_env.AppendUnique(CPPPATH=[env.get('PYTHON_CPPPATH')])

targets = []
targets.append( extfn_env.SharedLibrary("extpy",srcs) )

# To run the test, type
#     ascdev johnpye/extpy/extpytest.py

# Return the targs
env['extfns'] += targets

