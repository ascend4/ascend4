IMPORT "johnpye/nrel/sunpos_nrel";

REQUIRE "atoms.a4l";

MODEL julian_day;
	y,mon,d,h,min,s IS_A factor;
	tz IS_A time;
	t_JD IS_A time;

	JD: julian_day_nrel(
		y,mon,d,h,min,s,tz : INPUT;
		t_JD : OUTPUT
	);
METHODS
METHOD specify;
	RUN ClearAll;
	FIX y,mon,d,h,min,s,tz;
END specify;
METHOD values;
	y := 2000;
	mon := 1;
	d := 1;
	h := 12;
	min := 0;
	s := 0;
	tz := 0 {h};
END values;
METHOD on_load;
	RUN specify;
	RUN values;
END on_load;
END julian_day;

