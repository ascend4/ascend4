IMPORT "johnpye/grena/sunpos";

REQUIRE "atoms.a4l";

MODEL location;
	latitude IS_A angle_constant;
	longitude IS_A angle_constant;
	timezone IS_A time_constant;
END location;

MODEL sunpos_test;
	loc IS_A location;
	loc.latitude :== -35 {deg};
	loc.longitude :== 149 {deg};
	loc.timezone :== 10 {h};

	p IS_A pressure;
	T IS_A temperature;
	zenith, azimuth IS_A angle;
	t_UTC IS_A time;
	t IS_A time;
	t = t_UTC + loc.timezone;

	solar: sunpos(
		t_UTC, p, T : INPUT;
		zenith, azimuth : OUTPUT;
		loc : DATA
	);

	altitude IS_A angle;
	altitude = 0.5{PI} - zenith;

METHODS
METHOD on_load;
	FIX p, T, t;
	p := 1 {atm};
	T := 20 {K} + 273.15 {K};
	t := 5 {d};
END on_load;
END sunpos_test;

