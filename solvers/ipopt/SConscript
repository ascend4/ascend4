Import('env')

if env.get('WITH_IPOPT'):
	solver_env = env.Copy()

	solver_env.AppendUnique(CPPPATH=[solver_env.get('IPOPT_CPPPATH')])

	solver_env.Append(
		CPPDEFINES=[
			'ASC_WITH_IPOPT'
		]
	)

	libipopt = solver_env.SharedLibrary("ipopt",["asc_ipopt.c"]
		,LIBS = ['ascend','ipopt']
		,LIBPATH = ['#']
	)

	env.Depends(libipopt,env['libascend'])

	env['extfns'] += [libipopt]

# vim: set syntax=python:
